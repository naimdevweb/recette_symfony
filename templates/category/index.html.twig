{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
<div class="container mt-5">
    <!-- Titre de la page -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-dark fw-bold display-4">Catégories</h1>
        <a href="{{ path('app_category_new') }}" class="btn btn-primary shadow-lg">
            <i class="fas fa-plus"></i> Créer une nouvelle catégorie
        </a>
    </div>

    <!-- Tableau des catégories -->
    <div class="card shadow-lg rounded-5">
        <div class="card-header bg-gradient text-white text-center py-4" style="background: linear-gradient(45deg, #FF7E5F, #FEB47B);">
            <h4 class="mb-0"><i class="fas fa-list"></i> Liste des catégories</h4>
        </div>
        <div class="card-body p-5">
            <table class="table table-bordered table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>Nom</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.name }}</td>
                        <td>
                            <!-- Boutons stylisés pour actions -->
                            <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-sm btn-outline-info mx-1">
                                <i class="fas fa-eye"></i> Voir
                            </a>
                            <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-sm btn-outline-warning mx-1">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="3" class="text-center text-muted">Aucune catégorie trouvée</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

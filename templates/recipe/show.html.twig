{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/test.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <!-- Titre de la page -->
        <div class="page-header">
            <h1 class="page-title">Detail de la recette</h1>
        </div>

        <!-- DÃ©tails de la recette -->
        <div class="recipe-details">
            <table class="recipe-table">
                <tbody>
                    
                    <tr>
                        <th>Nom</th>
                        <td>{{ recipe.name }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ recipe.description }}</td>
                    </tr>

                     <tr>
                        <th>Category</th>
                        <td>{{ recipe.category }}</td>
                    </tr>

                    <tr>
                        <th>Recette ajoutee par</th>
                        <td>{{ recipe.user.pseudo }}</td>
                    </tr>

                 

                </tbody>
            </table>
        </div>

        <!-- Actions disponibles -->
        <div class="actions">
            <a href="{{ path('app_recipe_index') }}" class="btn-action">Revenir a la liste</a>
            {% if app.user == recipe.user %}
                <a href="{{ path('app_recipe_edit', {'slug': recipe.slug}) }}" class="btn-action">Modifier</a>
            {% endif %}

            
           
        </div>

        <!-- Formulaire de suppression -->
           {% if app.user == recipe.user %}
         <div class="delete-form mt-4 text-center">
            <h5 class="text-danger">Etes vous sur de vouloir supprimer cette recette?</h5>
            <div>
         
            {{ include('recipe/_delete_form.html.twig') }}
            {% endif %}
        </div>
    
{% endblock %}
